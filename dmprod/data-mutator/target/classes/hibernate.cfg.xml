<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>

        <property name="hbm2ddl.auto">none</property>

        <!-- JDBC connection pool (use the built-in) -->
        <property name="connection.pool_size">10</property>
        <property name="current_session_context_class">thread</property>

        <mapping class="com.persinity.ndt.datamutator.hibernate.Department"/>
        <mapping class="com.persinity.ndt.datamutator.hibernate.Employee"/>
        <mapping class="com.persinity.ndt.datamutator.hibernate.Position"/>
        <mapping class="com.persinity.ndt.datamutator.hibernate.Funding"/>
        <mapping class="com.persinity.ndt.datamutator.hibernate.CostCenter"/>

    </session-factory>
</hibernate-configuration>
